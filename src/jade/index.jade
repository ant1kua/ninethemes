extends _layout

block title
	title Title of template

block content
	//BEGIN top-line
	.top-line
		.top-menu.container
			.top-menu__left
				ul.top-menu__list
					li.top-menu__el
						a(href="#").top-menu__link us dollar
					li.top-menu__el
						a(href="#").top-menu__link english
			.top-menu__right
				ul.top-menu__list
					li.top-menu__el
						a(href="#").top-menu__link my account
					li.top-menu__el
						a(href="#").top-menu__link my cart
							span.top-menu__count 0
					li.top-menu__el
						a(href="#").top-menu__link checkout
	//END top-line
	//BEGIN header

	header.header
		.header__in.container
			.header__left
				.logo
					a(href="#").logo__link
						img(src="img/logo-goshop.png")
			.header__right
				//BEGIN nav
				nav.nav
					ul.nav__list
						li.nav__el
							a.nav__link.nav__link_active home
						li.nav__el
							a.nav__link bikes
						li.nav__el
							a.nav__link clothing
						li.nav__el
							a.nav__link components
						li.nav__el
							a.nav__link accessories
						li.nav__el
							a.nav__link blog
						li.nav__el
							a.search
								i.search__ico.fa.fa-search
				//END nav
				//BEGIN nav_small
				.nav_small
					span.btn_nav
						i.fa.fa-reorder
						|navigation
				//END nav_small
		//START promo
		.promo
			//.promo__big
				img(src="img/goshop-2.png").promo__img
				.promo__small
					img(src="img/goshop-3.png").promo__img
			.promo__btn
		//END promo
		.promo-item
			.promo-item__el
				img(src="img/banner-01.png").promo-item__img
				.promo-item__descr.promo-item__descr_right
					h3.promo-item__title men
						span.promo-item__color.promo-item__color_one $350
					p Bikes, Clothing, and many more...
					span.btn.btn_std shop now

			.promo-item__el
				img(src="img/banner-02.png").promo-item__img
				.promo-item__descr.promo-item__descr_center
					h3.promo-item__title women
						span.promo-item__color.promo-item__color_two $250
					p Bikes, Clothing, Accessories and many more...
					span.btn.btn_std shop now

			.promo-item__el
				img(src="img/banner-03.png").promo-item__img
				.promo-item__descr.promo-item__descr_left
					h3.promo-item__title.promo-item__color_three bike's
						span.promo-item__color.promo-item__color_one $550
					p.promo-item__color_four All Famous Bike Brand Only for you...
					span.btn.btn_std shop now

	//END header