extends _layout

block title
	title Title of template

block content
	//BEGIN top-line
	.top-line
		.top-menu.container
			.top-menu__left
				ul.top-menu__list
					li.top-menu__el
						a(href="#").top-menu__link us dollar
					li.top-menu__el
						a(href="#").top-menu__link english
			.top-menu__right
				ul.top-menu__list
					li.top-menu__el
						a(href="#").top-menu__link my account
					li.top-menu__el
						a(href="#").top-menu__link my cart
							span.top-menu__count 0
