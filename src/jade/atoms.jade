extends _layout

block content
    .container
        .atom
            .newsletter
                .newsletter__in
                    h2.newsletter__title NEWSLETTER
                    p.newsletter__descr Did you know that we ship to over
                        span 24 different countries
                    form.subscribe
                        .subscribe__field
                            input.input.input__black(placeholder="Enter your email address")
                        .subscribe__action
                            button.btn.btn_square(type="submit")
                                i.fa.fa-envelope
                                | Subscribe
                    span.btn.btn_close &times;

        .atom
            span.btn.btn_std
                | shop now

        .atom
            a(href="#").btn_find

        .atom
            .top-menu
                .top-menu__left
                    ul.top-menu__list
                        li.top-menu__el
                            a(href="#").top-menu__link us dollar
                        li.top-menu__el
                            a(href="#").top-menu__link english
                .top-menu__right
                    ul.top-menu__list
                        li.top-menu__el
                            a(href="#").top-menu__link my account
                        li.top-menu__el
                            a(href="#").top-menu__link my cart
                                span.top-menu__count 0
                        li.top-menu__el
                            a(href="#").top-menu__link checkout
